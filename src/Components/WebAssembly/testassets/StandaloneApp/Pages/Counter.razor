@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    int currentCount = 0;

    [Parameter] public int? IncrementAmount { get; set; }

    void IncrementCount()
    {
        currentCount += IncrementAmount.GetValueOrDefault(1);
    }
}
